#!/usr/bin/env bash
set -e

get_field_value() {
  grep "^${2}: " "$1" | cut -d' ' -f2
}

for f in "$@"
do
  # read in a file as required first argument, output html on stdout
  created_date=$(get_field_value "$f" "created")
  updated_date=$(get_field_value "$f" "updated")

  echo "$f,$created_date,$updated_date"
done
